{
  "manifest_version": 3,
  "name": "Multilingual to Darija Translator",
  "version": "1.0",
  "description": "Translate selected text into Darija using my Java backend.",
  "permissions": ["contextMenus", "storage", "scripting", "sidePanel", "activeTab"],
  "host_permissions": [
    "http://localhost:8082/English-darija-tr/rest/*",
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  }
}
